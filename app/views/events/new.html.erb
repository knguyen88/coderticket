<div class='events-header' style='background-image: url(<%= header_background_image_url %>)'></div>
<div class="container-fluid">
  <div class="col-md-8">
    <h2>Create a new event</h2>
    <form method="post" action="<%= events_path %>">
      <%= token_tag %>
      <div class="form-group">
        <label for="event[name]">Name</label>
        <input type="text" class="form-control" id="event[name]" name="event[name]" placeholder="Superbowl"/>
      </div>
      <div class="form-group">
        <label for="event[category_id]">Category</label>
        <select id="event[category_id]" name="event[category_id]" class="form-control">
          <% @categories.each do |cat| %>
              <option value="<%= cat.id %>"><%= cat.name %></option>
          <% end %>
        </select>
      </div>
      <div class="form-group">
        <label for="event[extended_html_description]">Description</label>
        <textarea id="event[extended_html_description]" name="event[extended_html_description]"
                  placeholder="Super awesome tournament" class="form-control"></textarea>
      </div>
      <div class="form-group">
        <label for="event[hero_image_url]">Image</label>
        <input type="text" class="form-control" id="event[hero_image_url]" name="event[hero_image_url]" placeholder="www.google.com"/>
      </div>
      <div class="form-group">
        <label for="event[venue_id]">Venue</label>
        <select id="event[venue_id]" name="event[venue_id]" class="form-control">
          <% @venues.each do |venue| %>
              <option value="<%= venue.id %>"><%= venue.name %></option>
          <% end %>
        </select>
      </div>
      <div class="form-group">
        <label for="event[starts_at]">Start</label>
        <input type="date" class="form-control" id="event[starts_at]" name="event[starts_at]"/>
      </div>
      <div class="form-group">
        <label for="event[ends_at]">End</label>
        <input type="date" class="form-control" id="event[ends_at]" name="event[ends_at]"/>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
</div>