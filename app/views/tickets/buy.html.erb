<div class='events-header' style='background-image: url(<%= header_background_image_url %>)'></div>
<div class="container-fluid">
  <div class="col-md-8">
    <br/>
    <%= flash_messages %>
    <h2>Order information</h2>
    <h4>Event</h4>
    <div class="form-group">
      <label class="control-label">Name</label>
      <p class="form-control-static"><%= @event.name %></p>
    </div>
    <div class="form-group">
      <label class="control-label">Venue</label>
      <p class="form-control-static"><%= @event.venue.name %></p>
    </div>
    <br/>
    <hr/>
    <h4>Tickets</h4>
    <table class="table table-hover table-striped">
      <thead>
      <tr>
        <th>Name</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
      </thead>
      <tbody>
      <% @orders.each do |order| %>
          <tr>
            <td><%= order[:ticket_type].name %></td>
            <td><%= order[:quantity] %></td>
            <td><%= order[:ticket_type].price %></td>
          </tr>
      <% end %>
      </tbody>
      <tfoot>
      <tr>
        <td colspan="2"><b>Total</b></td>
        <td><%= @total %></td>
      </tr>
      </tfoot>
    </table>
  </div>
</div>