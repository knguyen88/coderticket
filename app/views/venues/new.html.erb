<div class='events-header' style='background-image: url(<%= header_background_image_url %>)'></div>
<div class="container-fluid">
  <div class="col-md-8">
    <h2>Create a new venue</h2>
    <form method="post" action="<%= new_venue_path %>">
      <%= token_tag %>
      <div class="form-group">
        <label for="venue[name]">Name</label>
        <input type="text" class="form-control" id="venue[name]" name="venue[name]" placeholder="Awesome place">
      </div>
      <div class="form-group">
        <label for="venue[full_address]">Address</label>
        <input type="text" class="form-control" id="venue[full_address]" name="venue[full_address]" placeholder="1600 Pennsylvania Ave NW, Washington, DC 20500, United States">
      </div>
      <div class="form-group">
        <label for="venue[region_id]">Region</label>
        <select id="venue[region_id]" name="venue[region_id]" class="form-control">
          <% @regions.each do |region| %>
              <option value="<%= region.id %>"><%= region.name %></option>
          <% end %>
        </select>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
</div>