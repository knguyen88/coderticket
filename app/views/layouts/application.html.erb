<!DOCTYPE html>
<html>
<head>
  <title>Coderticket</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-fixed-top navbar-dark bg-inverse">
  <a class="navbar-brand" href="<%= root_path %>">Coder Ticket</a>
  <% if !authenticated? %>
      <ul class="nav navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="<%= login_path %>">Log In</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="<%= register_path %>">Sign Up</a>
        </li>
      </ul>
  <% end %>
  <% if authenticated? %>
      <ul class="nav navbar-nav">
        <li class="nav-item dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
            Events
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li><a href="<%= my_events_events_path %>">My events</a></li>
            <li><a href="<%= new_event_path %>">Create new event</a></li>
          </ul>
        </li>
        <li class="nav-item dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
            Venues
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li><a href="<%= venues_path %>">List</a></li>
            <li><a href="<%= new_venue_path %>">Create new venue</a></li>
          </ul>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right" id="right-nav-bar">
        <li class="nav-item">
          <form action="<%= logout_path %>" method="post">
            <%= token_tag %>
            <button class="btn btn-link navbar-btn" type="submit">Logout</button>
          </form>
        </li>
      </ul>
  <% end %>
</nav>
<%= yield %>

</body>
</html>
