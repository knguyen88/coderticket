<div class="col-md-8">
  <h2>Register a new account</h2>
  <form method="post" action="<%= register_path %>">
    <%= token_tag %>
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" name="user[name]" placeholder="John Doe"/>
    </div>
    <div class="form-group <%= validation_error_class(@user, :email) %>">
      <label for="email">Email address</label>
      <input type="email" class="form-control" id="email" name="user[email]" placeholder="john@example.com"/>
      <% if @user.errors[:email].any? %>
          <span class="help-block"><%= friendly_validation_message(@user, :email) %></span>
      <% end %>
    </div>
    <div class="form-group <%= validation_error_class(@user, :password) %>">
      <label for="password">Password</label>
      <input type="password" class="form-control" id="password" name="user[password]"/>
      <% if @user.errors[:password].any? %>
          <span class="help-block"><%= friendly_validation_message(@user, :password) %></span>
      <% end %>
    </div>
    <div class="form-group <%= validation_error_class(@user, :password_confirmation) %>">
      <label for="password-confirmation">Confirm password</label>
      <input type="password" class="form-control" id="password-confirmation" name="user[password_confirmation]"/>
      <% if @user.errors[:password_confirmation].any? %>
          <span class="help-block"><%= friendly_validation_message(@user, :password_confirmation) %></span>
      <% end %>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
  </form>
</div>